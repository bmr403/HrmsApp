					<version>1.2</version>
					<executions>
						<execution>
							<id>buildnumber</id>
							<phase>compile</phase>
							<goals>
								<goal>create</goal>
							</goals>
							<configuration>
								<!-- format>: #{0} ({1,date})</format! -->
								<format>{0} </format>
								<items>
									<item>buildNumber\d*</item>
									<item>timestamp</item>
								</items>
							</configuration>
						</execution>
					</executions>
